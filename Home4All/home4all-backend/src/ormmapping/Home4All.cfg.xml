<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   	<!-- properties -->
		<property name="dialect">org.hibernate.dialect.PostgreSQL94Dialect</property>
		<property name="connection.driver_class">org.postgresql.Driver</property>
<!--		<property name="connection.url">jdbc:postgresql://localhost/home4alldb</property>-->
		<property name="connection.url">jdbc:postgresql://192.168.100.229/home4alldb</property>
		<property name="connection.username">postgres</property>
		<property name="connection.password">postgres</property>
		<property name="show_sql">false</property>
		<property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<!-- mapping files -->
		<mapping resource="ormmapping/tables/Address.hbm.xml" />
		<mapping resource="ormmapping/tables/Bedroom.hbm.xml" />
		<mapping resource="ormmapping/tables/BedroomType.hbm.xml" />
		<mapping resource="ormmapping/tables/Chat.hbm.xml" />
		<mapping resource="ormmapping/tables/Comment.hbm.xml" />
		<mapping resource="ormmapping/tables/Complaint.hbm.xml" />
		<mapping resource="ormmapping/tables/Equipment.hbm.xml" />
		<mapping resource="ormmapping/tables/Expenses.hbm.xml" />
		<mapping resource="ormmapping/tables/Folder.hbm.xml" />
		<mapping resource="ormmapping/tables/Gender.hbm.xml" />
		<mapping resource="ormmapping/tables/MultipleRoom.hbm.xml" />
		<mapping resource="ormmapping/tables/Notification.hbm.xml" />
		<mapping resource="ormmapping/tables/Occupation.hbm.xml" />
		<mapping resource="ormmapping/tables/Ordination.hbm.xml" />
		<mapping resource="ormmapping/tables/Pet.hbm.xml" />
		<mapping resource="ormmapping/tables/Photo.hbm.xml" />
		<mapping resource="ormmapping/tables/Property.hbm.xml" />
		<mapping resource="ormmapping/tables/PropertyType.hbm.xml" />
		<mapping resource="ormmapping/tables/Typology.hbm.xml" />
		<mapping resource="ormmapping/tables/Users.hbm.xml" />
	</session-factory>
</hibernate-configuration>
